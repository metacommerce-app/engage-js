{
    "compilerOptions": {
        "lib": [
            "es2019",
            "es6",
            "dom"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./lib/cjs",
        "declarationDir": "./lib/cjs/types",
        "target": "ES2019",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "inlineSourceMap": true
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/*.test.ts",
        "node_modules"
    ]
}
