{
  "name": "@metacommerce-app/engage-js",
  "version": "0.0.1",
  "description": "Metacommerce Engage Javascript SDK",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.json",
    "lint": "eslint . --ext .ts",
    "test": "jest --runInBand --detectOpenHandles",
    "watch": "tsc -w",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metacommerce-app/engage-js.git"
  },
  "author": "Sebastien Coutu <sebastien@metacommerce.app>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metacommerce-app/engage-js/issues"
  },
  "homepage": "https://github.com/metacommerce-app/engage-js#readme",
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@commitlint/types": "17.4.4",
    "@types/jest": "27.5.2",
    "@types/node": "10.17.60",
    "@types/node-fetch": "2.6.4",
    "@types/prettier": "2.7.3",
    "@types/source-map-support": "0.5.6",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "dotenv": "16.3.1",
    "esbuild": "0.18.17",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.9.0",
    "jest": "27.5.1",
    "prettier": "2.8.8",
    "semantic-release": "20.1.3",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  }
}
