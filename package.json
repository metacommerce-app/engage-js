{
  "name": "@metacommerce-app/engage-js",
  "version": "0.0.1",
  "description": "Metacommerce Engage Javascript SDK",
  "types": "./lib/types/index.d.ts",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./lib",
    "build": "npm run clean && npm run build:cjs",
    "build:cjs": "tsc -p ./tsconfig.json",
    "lint": "eslint . --ext .ts",
    "test": "jest --runInBand --detectOpenHandles",
    "watch": "tsc -w",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metacommerce-app/engage-js.git"
  },
  "author": "Sebastien Coutu <sebastien@metacommerce.app>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metacommerce-app/engage-js/issues"
  },
  "homepage": "https://github.com/metacommerce-app/engage-js#readme",
  "devDependencies": {
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@commitlint/types": "17.4.4",
    "@types/jest": "29.5.5",
    "@types/node": "18.18.3",
    "@types/node-fetch": "2.6.6",
    "@types/prettier": "2.7.3",
    "@types/source-map-support": "0.5.8",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "dotenv": "16.3.1",
    "esbuild": "0.19.4",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "semantic-release": "22.0.5",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
